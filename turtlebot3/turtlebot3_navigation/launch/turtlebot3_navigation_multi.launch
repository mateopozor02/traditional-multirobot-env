<launch>
  <!-- Arguments -->
  <arg name="model" default="$(env TURTLEBOT3_MODEL)" doc="model type [burger, waffle, waffle_pi]"/>
  <arg name="map_file" default="$(find turtlebot3_navigation)/maps/pista.yaml"/>
  <arg name="open_rviz" default="true"/>
  <arg name="move_forward_only" default="false"/>

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- AMCL -->
  <include file="$(find turtlebot3_navigation)/launch/amcl1.launch"/>
  <include file="$(find turtlebot3_navigation)/launch/amcl2.launch"/>
  <include file="$(find turtlebot3_navigation)/launch/amcl3.launch"/>

  <!-- move_base -->
  <include file="$(find turtlebot3_navigation)/launch/move_base1.launch">
    <arg name="model" value="$(arg model)" />
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>

  <include file="$(find turtlebot3_navigation)/launch/move_base2.launch">
    <arg name="model" value="$(arg model)" />
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>

  <include file="$(find turtlebot3_navigation)/launch/move_base3.launch">
    <arg name="model" value="$(arg model)" />
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>

  <!-- Goal Publishers -->
  <!-- Launch the send_goal_node -->
  <node pkg="turtlebot3_navigation" type="goal_publisher1.py" name="send_goal_node1" output="screen" />
  <node pkg="turtlebot3_navigation" type="goal_publisher2.py" name="send_goal_node2" output="screen" />
  <node pkg="turtlebot3_navigation" type="goal_publisher3.py" name="send_goal_node3" output="screen" />

  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find turtlebot3_navigation)/rviz/turtlebot3_navigation_multi.rviz"/>
  </group>
</launch>
